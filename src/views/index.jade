html(ng-app="app")
  head
    link(rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css")
    link(rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-theme.css")
    script(type="text/javascript" src="/lib/jquery/dist/jquery.js")
    script(type="text/javascript" src="/lib/angular/angular.js")
    script(type="text/javascript" src="/lib/bootstrap/dist/js/bootstrap.js")
    script(type="text/javascript" src="/app.js")
    script(type="text/javascript" src="/controllers/RedisCtrl.js")
  body(ng-controller="RedisCtrl")
    ul.list-group
      li.list-group-item(ng-repeat="record in records")
        span.label.label-default {{record.type}}
        span &nbsp;
        span {{record.key}}
        span &nbsp;
        span {{record.value}}
    button.btn.btn-primary(ng-click="refresh()") Refresh (R)
    div(ng-show="isLoading") Loading...
